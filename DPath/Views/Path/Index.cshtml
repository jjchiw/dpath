@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase
@{
    Layout = "Views/Shared/Layout.cshtml";
}

<div class="row">
    <div class="span10">
        <h2>Submit a New Path</h2>
        <form>
        <div class="clearfix" id="path-form">
            <label for="Name">Name</label>
            <div class="input">
                <input id="path-name" name="Name" type="text" /> <input id="add-path" type="button" class="btn btn-primary" value="save path"/>
            </div>
        </div>
		<div class="clearfix">
            <label for="Name" id="path-name-saved"></label>
			<input type="hidden" id="path-id" />
        </div>
        <div class="clearfix hide" id="goals">
			<label for="Name">Goal</label>
			<div class="input">
                <input id="goal-name" name="Goal" type="text" /> <input id="add-goal" type="button" class="btn btn-primary" value="add goal"/>
            </div>
			<hr />

			<label for="Goals">Goals</label>
			<div class="clearfix">
				<ul id="goals-list">
				
				</ul>
			</div>
        </div>
        </form>
    </div>
</div>

@section PageScript {
    <script type="text/javascript" src="/Content/js/specific/path.index.js"></script>