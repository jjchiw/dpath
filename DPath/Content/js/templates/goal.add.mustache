<li id="goal-id-{{Id}}">
	<i class="icon-resize-vertical"></i>
	<a id="goal-delete-{{Id}}" href="#" class="btn btn-danger">
		<i class="icon-trash"></i>
	</a>
	<a id="goal-edit-{{Id}}" href="#" class="btn">
		<i class="icon-pencil"></i>
	</a>
	<a id="goal-name-{{Id}}" href="#" class="no-link">{{Name}}</a>
</li>
<li id="goal-edit-form-{{Id}}" class="hidden">
	<input type="text" id="goal-edit-text-{{Id}}"/>
	<input id="goal-edit-button-{{Id}}" type="button" class="btn btn-primary" value="update goal"/> 
	<input id="goal-cancel-button-{{Id}}" type="button" class="btn btn-inverse" value="cancel"/>
</li>